<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutUsActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_color_gray_blue">

        <ImageButton
            android:onClick="back"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:src="@mipmap/arrow_left"/>

        <com.rthc.freshair.view.FZCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="        在硬件方面，研发设备上，企业拥有100平方米的研发办公室，专门成立工程与研究开发中心，配备了现代化高精尖的研发设备，包括空气质量检测仪、高压测试仪、激光传感器、测试架等，完善的研发设备为“基于物联网技术的智能城市空气质量监控系统“项目的实施提供客观条件，确实项目的顺利地实施、开展、完成。"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/logo"/>

</LinearLayout>
