<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rthc.freshair.activity.TabRootActivity"
    android:background="#FAFAFA"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#aaaaaa">

    </View>


    <com.rthc.freshair.widget.MainNavigateTabBar
        android:id="@+id/navigateTabBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigateTabTextSize="11sp"
        app:containerId="@id/main_container"

        app:navigateTabSelectedTextColor="@color/colorPrimary"
        app:navigateTabTextColor="@color/tab_text_normal">

    </com.rthc.freshair.widget.MainNavigateTabBar>
</LinearLayout>
