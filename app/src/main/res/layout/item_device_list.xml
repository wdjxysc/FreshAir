<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/deviceImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/device_pic" />

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:maxLines="1"
            android:text="检测设备"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/snTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="20011609000002"
            android:textColor="@color/gray_text"
            android:textSize="13sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/isOnlineImageView"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/wifi_4" />

    <TextView
        android:id="@+id/isOnlineTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:text="在线"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:layout_marginEnd="10dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/arrow_blue_right" />


</LinearLayout>